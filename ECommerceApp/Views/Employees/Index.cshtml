<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Employees Details</h2>
    </div>
    <div class="col-6 text-right">
        <button type="button" id="btnModal" class="btn btn-info" data-toggle="modal" data-target="#employeeModal" onclick="clearTextBox();">
            Add new Employee
        </button>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <thead>
                <tr class="table-info">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Postion</th>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>

    </div>
    <div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Employee's Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <label hidden>ID</label>
                        </div>
                        <div class="col-lg-9">
                            <div class="form-group">
                                <input id="txtId" hidden class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label>Name</label>
                        </div>
                        <div class="col-lg-9">
                            <div class="form-group">
                                <input id="txtName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label>Email</label>
                        </div>
                        <div class="col-lg-9">
                            <div class="form-group">
                                <input id="txtEmail" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label>Phone</label>
                        </div>
                        <div class="col-lg-9">
                            <div class="form-group">
                                <input id="txtPhone" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label>Position</label>
                        </div>
                        <div class="col-lg-9">
                            <div class="form-group">
                                <select id="positionDropdown" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" id="btnAdd" onclick="return SaveData();" class="btn btn-primary">Save changes</a>
                    <a href="#" id="btnUpdate" onclick="UpdateData();" class="btn btn-primary">Update</a>
                    <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/Employee.js"></script>
<script src="~/js/EmployeeAjax.js"></script>